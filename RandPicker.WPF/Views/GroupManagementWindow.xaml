<Window x:Class="RandPicker.WPF.Views.GroupManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:viewmodels="clr-namespace:RandPicker.WPF.ViewModels"
        xmlns:converters="clr-namespace:RandPicker.WPF.Converters"
        mc:Ignorable="d"
        Title="分组管理" 
        Height="600" 
        Width="900"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        d:DataContext="{d:DesignInstance Type=viewmodels:GroupManagementViewModel}">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        <converters:BooleanToVisibilityInverseConverter x:Key="BooleanToVisibilityInverseConverter" />
    </Window.Resources>
    
    <materialDesign:DialogHost Identifier="GroupManagementDialog">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 标题和工具栏 -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="分组管理" 
                           Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <materialDesign:PopupBox Style="{StaticResource MaterialDesignPopupBox}" PlacementMode="BottomAndAlignRightEdges">
                        <StackPanel>
                            <TextBlock Text="随机分组" Margin="16,8" Style="{StaticResource MaterialDesignSubtitle1TextBlock}"/>
                            <Separator/>
                            <Grid Width="200" Margin="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="分组数:" VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1" x:Name="GroupCountTextBox" Text="2" Margin="8,0"/>
                                <Button Grid.Column="2" 
                                        Content="确定" 
                                        Command="{Binding RandomGroupCommand}" 
                                        CommandParameter="{Binding Text, ElementName=GroupCountTextBox}"/>
                            </Grid>
                        </StackPanel>
                    </materialDesign:PopupBox>
                    <materialDesign:PopupBox Style="{StaticResource MaterialDesignPopupBox}" PlacementMode="BottomAndAlignRightEdges">
                        <StackPanel>
                            <TextBlock Text="导出" Margin="16,8" Style="{StaticResource MaterialDesignSubtitle1TextBlock}"/>
                            <Separator/>
                            <Button Content="导出为Excel" Command="{Binding ExportGroupsCommand}" CommandParameter="excel"/>
                            <Button Content="导出为CSV" Command="{Binding ExportGroupsCommand}" CommandParameter="csv"/>
                            <Button Content="导出为PDF" Command="{Binding ExportGroupsCommand}" CommandParameter="pdf"/>
                            <Button Content="导出为JSON" Command="{Binding ExportGroupsCommand}" CommandParameter="json"/>
                        </StackPanel>
                    </materialDesign:PopupBox>
                    <Button Command="{Binding AddGroupCommand}"
                            ToolTip="添加分组"
                            Style="{StaticResource MaterialDesignIconButton}">
                        <materialDesign:PackIcon Kind="AccountGroupAdd" Width="24" Height="24"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- 主内容区域 -->
            <Grid Grid.Row="1" Margin="0,16,0,0">
                <!-- 分组列表 -->
                <Grid Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityInverseConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 搜索框 -->
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="搜索分组..."
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,16">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Return" Command="{Binding SearchCommand}"/>
                        </TextBox.InputBindings>
                        <TextBox.TrailingIcon>
                            <Button Command="{Binding SearchCommand}"
                                    Style="{StaticResource MaterialDesignIconButton}">
                                <materialDesign:PackIcon Kind="Magnify"/>
                            </Button>
                        </TextBox.TrailingIcon>
                    </TextBox>

                    <!-- 分组数据表格 -->
                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding FilteredGroups}"
                              SelectedItem="{Binding SelectedGroup}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              Style="{StaticResource MaterialDesignDataGrid}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="分组名称" 
                                                Binding="{Binding Name}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="成员数量" 
                                                Binding="{Binding Students.Count}" 
                                                Width="100"/>
                            <DataGridTemplateColumn Header="成员" Width="2*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding StudentNames}" 
                                                   TextWrapping="Wrap" 
                                                   Margin="8"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Command="{Binding DataContext.EditGroupCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    ToolTip="编辑"
                                                    Style="{StaticResource MaterialDesignIconButton}">
                                                <materialDesign:PackIcon Kind="Pencil"/>
                                            </Button>
                                            <Button Command="{Binding DataContext.DeleteGroupCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    ToolTip="删除"
                                                    Style="{StaticResource MaterialDesignIconButton}">
                                                <materialDesign:PackIcon Kind="Delete"/>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>

                <!-- 编辑表单 -->
                <Grid Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 左侧：可选学生列表 -->
                    <materialDesign:Card Padding="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="可选学生" 
                                       Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                       Margin="0,0,0,16"/>

                            <ListBox Grid.Row="1" 
                                     x:Name="AvailableStudentsListBox"
                                     ItemsSource="{Binding GetUnselectedStudents()}"
                                     Style="{StaticResource MaterialDesignListBox}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Name}" 
                                                       Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                                            <TextBlock Text="{Binding Id, StringFormat=({0})}" 
                                                       Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                                       Margin="4,0,0,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </materialDesign:Card>

                    <!-- 中间：操作按钮 -->
                    <StackPanel Grid.Column="1" 
                                VerticalAlignment="Center" 
                                Margin="16,0">
                        <Button Command="{Binding AddStudentToSelection}"
                                CommandParameter="{Binding SelectedItem, ElementName=AvailableStudentsListBox}"
                                Style="{StaticResource MaterialDesignIconButton}"
                                Margin="0,0,0,16">
                            <materialDesign:PackIcon Kind="ArrowRight" Width="24" Height="24"/>
                        </Button>
                        <Button Command="{Binding RemoveStudentFromSelection}"
                                CommandParameter="{Binding SelectedItem, ElementName=SelectedStudentsListBox}"
                                Style="{StaticResource MaterialDesignIconButton}">
                            <materialDesign:PackIcon Kind="ArrowLeft" Width="24" Height="24"/>
                        </Button>
                    </StackPanel>

                    <!-- 右侧：已选学生和分组信息 -->
                    <Grid Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 分组名称 -->
                        <TextBox Text="{Binding NewGroup.Name}"
                                 materialDesign:HintAssist.Hint="分组名称"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,0,0,16"/>

                        <!-- 已选学生列表 -->
                        <materialDesign:Card Grid.Row="1" Padding="16" Margin="0,0,0,16">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="已选学生" 
                                           Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                           Margin="0,0,0,16"/>

                                <ListBox Grid.Row="1" 
                                         x:Name="SelectedStudentsListBox"
                                         ItemsSource="{Binding SelectedStudents}"
                                         Style="{StaticResource MaterialDesignListBox}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Name}" 
                                                           Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                                                <TextBlock Text="{Binding Id, StringFormat=({0})}" 
                                                           Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                                           Margin="4,0,0,0"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </materialDesign:Card>

                        <!-- 底部按钮 -->
                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="取消" 
                                    Command="{Binding CancelEditCommand}"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Margin="0,0,8,0"/>
                            <Button Content="保存" 
                                    Command="{Binding SaveGroupCommand}"
                                    Style="{StaticResource MaterialDesignRaisedButton}"/>
                        </StackPanel>
                    </Grid>
                </Grid>

                <!-- 加载遮罩 -->
                <Grid Background="#80000000" 
                      Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ProgressBar IsIndeterminate="True" 
                                 Style="{StaticResource MaterialDesignCircularProgressBar}"
                                 Value="0"
                                 Width="48"
                                 Height="48"/>
                </Grid>
            </Grid>
        </Grid>
    </materialDesign:DialogHost>
</Window>