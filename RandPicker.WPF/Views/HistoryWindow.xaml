<Window x:Class="RandPicker.WPF.Views.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:viewmodels="clr-namespace:RandPicker.WPF.ViewModels"
        xmlns:converters="clr-namespace:RandPicker.WPF.Converters"
        mc:Ignorable="d"
        Title="历史记录" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        d:DataContext="{d:DesignInstance Type=viewmodels:HistoryViewModel}">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        <converters:BooleanToVisibilityInverseConverter x:Key="BooleanToVisibilityInverseConverter" />
    </Window.Resources>
    
    <materialDesign:DialogHost Identifier="HistoryDialog">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 标题和工具栏 -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="历史记录" 
                           Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Command="{Binding RefreshCommand}"
                            ToolTip="刷新"
                            Style="{StaticResource MaterialDesignIconButton}">
                        <materialDesign:PackIcon Kind="Refresh" Width="24" Height="24"/>
                    </Button>
                    <materialDesign:PopupBox Style="{StaticResource MaterialDesignPopupBox}" PlacementMode="BottomAndAlignRightEdges">
                        <StackPanel>
                            <TextBlock Text="导出" Margin="16,8" Style="{StaticResource MaterialDesignSubtitle1TextBlock}"/>
                            <Separator/>
                            <Button Content="导出为Excel" Command="{Binding ExportHistoryCommand}" CommandParameter="excel"/>
                            <Button Content="导出为CSV" Command="{Binding ExportHistoryCommand}" CommandParameter="csv"/>
                            <Button Content="导出为PDF" Command="{Binding ExportHistoryCommand}" CommandParameter="pdf"/>
                            <Button Content="导出为JSON" Command="{Binding ExportHistoryCommand}" CommandParameter="json"/>
                        </StackPanel>
                    </materialDesign:PopupBox>
                    <Button Command="{Binding ClearHistoryCommand}"
                            ToolTip="清除历史记录"
                            Style="{StaticResource MaterialDesignIconButton}">
                        <materialDesign:PackIcon Kind="DeleteSweep" Width="24" Height="24"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- 过滤器 -->
            <Grid Grid.Row="1" Margin="0,16,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 搜索框 -->
                <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="搜索历史记录..."
                         Style="{StaticResource MaterialDesignOutlinedTextBox}">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Return" Command="{Binding SearchCommand}"/>
                    </TextBox.InputBindings>
                    <TextBox.TrailingIcon>
                        <Button Command="{Binding SearchCommand}"
                                Style="{StaticResource MaterialDesignIconButton}">
                            <materialDesign:PackIcon Kind="Magnify"/>
                        </Button>
                    </TextBox.TrailingIcon>
                </TextBox>

                <!-- 日期选择器 -->
                <DatePicker Grid.Column="1"
                            SelectedDate="{Binding StartDate}"
                            materialDesign:HintAssist.Hint="开始日期"
                            Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                            Width="120"
                            Margin="8,0,0,0"/>

                <TextBlock Grid.Column="2" 
                           Text="至" 
                           VerticalAlignment="Center"
                           Margin="8,0"/>

                <DatePicker Grid.Column="3"
                            SelectedDate="{Binding EndDate}"
                            materialDesign:HintAssist.Hint="结束日期"
                            Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                            Width="120"/>

                <!-- 模式选择器 -->
                <ComboBox Grid.Column="4"
                          ItemsSource="{Binding AvailableModes}"
                          SelectedValue="{Binding SelectedMode}"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          Width="120"
                          Margin="8,0,0,0"/>
            </Grid>

            <!-- 历史记录列表 -->
            <DataGrid Grid.Row="2"
                      ItemsSource="{Binding FilteredHistoryItems}"
                      SelectedItem="{Binding SelectedHistoryItem}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="True"
                      Style="{StaticResource MaterialDesignDataGrid}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="选择结果" 
                                        Binding="{Binding SelectedName}" 
                                        Width="*"/>
                    <DataGridTextColumn Header="选择模式" 
                                        Binding="{Binding ModeDisplayName}" 
                                        Width="100"/>
                    <DataGridTextColumn Header="选择时间" 
                                        Binding="{Binding FormattedTime}" 
                                        Width="150"/>
                    <DataGridTextColumn Header="详细信息" 
                                        Binding="{Binding Details}" 
                                        Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- 加载遮罩 -->
            <Grid Grid.RowSpan="3" 
                  Background="#80000000" 
                  Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ProgressBar IsIndeterminate="True" 
                             Style="{StaticResource MaterialDesignCircularProgressBar}"
                             Value="0"
                             Width="48"
                             Height="48"/>
            </Grid>
        </Grid>
    </materialDesign:DialogHost>
</Window>